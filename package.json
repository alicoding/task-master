{
  "name": "task-master",
  "version": "1.0.0",
  "type": "module",
  "bin": {
    "tm": "./cli/entry.js"
  },
  "directories": {
    "test": "test"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsx cli/entry.ts",
    "test": "NODE_OPTIONS=--experimental-specifier-resolution=node npx vitest run --config vitest.unified.config.ts",
    "test:watch": "NODE_OPTIONS=--experimental-specifier-resolution=node npx vitest --config vitest.unified.config.ts",
    "test:coverage": "NODE_OPTIONS=--experimental-specifier-resolution=node npx vitest run --coverage --config vitest.unified.config.ts",
    "test:single": "NODE_OPTIONS=--experimental-specifier-resolution=node npx vitest run --config vitest.unified.config.ts",
    "test:legacy": "./tsfixresolution.js test",
    "test:legacy:single": "./tsfixresolution.js",
    "test:migrate": "node scripts/convert-to-vitest.js",
    "test:migrate:file": "node scripts/convert-to-vitest.js",
    "test:migrate:all": "node scripts/migrate-all-tests.js",
    "test:migrate:all:dry": "node scripts/migrate-all-tests.js --dry-run",
    "test:migrate:all:skip-tests": "node scripts/migrate-all-tests.js --skip-tests",
    "test:migrate:all:verbose": "node scripts/migrate-all-tests.js --verbose",
    "test:analyze": "node scripts/analyze-test-coverage.js",
    "test:migrate:interactive": "node scripts/select-test-to-migrate.js",
    "db:generate": "drizzle-kit generate:sqlite",
    "db:migrate": "tsx db/migrate.ts",
    "db:init": "tsx db/init.ts",
    "docs:generate": "node scripts/generate-docs.js",
    "docs:commands": "node scripts/generate-command-docs.js",
    "docs:all": "npm run docs:generate && npm run docs:commands",
    "db:fix": "node scripts/fix-database.js",
    "lint": "eslint . --ext .ts",
    "check": "tsc --noEmit",
    "fix:300-line": "node scripts/fix-long-files.js",
    "test:simple": "NODE_OPTIONS=--experimental-specifier-resolution=node npx vitest run --config vitest.simple.config.ts",
    "test:simple:watch": "NODE_OPTIONS=--experimental-specifier-resolution=node npx vitest --config vitest.simple.config.ts",
    "test:compat": "NODE_OPTIONS=--experimental-specifier-resolution=node npx vitest run --config vitest.uvu-compat.config.ts",
    "test:compat:ui": "NODE_OPTIONS=--experimental-specifier-resolution=node npx vitest --ui --config vitest.uvu-compat.config.ts"
  },
  "keywords": [
    "task-management",
    "cli",
    "productivity",
    "sqlite",
    "drizzle",
    "nlp",
    "ai"
  ],
  "author": "",
  "license": "ISC",
  "description": "Structured CLI Task Engine with SQLite + Drizzle, NLP, and AI integration",
  "dependencies": {
    "@types/better-sqlite3": "^7.6.13",
    "@types/node": "^22.15.17",
    "ansi-escapes": "^7.0.0",
    "better-sqlite3": "^11.10.0",
    "boxen": "^8.0.1",
    "chalk": "^5.4.1",
    "chokidar": "^4.0.3",
    "cli-cursor": "^5.0.0",
    "cli-table3": "^0.6.5",
    "commander": "^13.1.0",
    "drizzle-orm": "^0.43.1",
    "fuse.js": "^7.1.0",
    "gradient-string": "^3.0.0",
    "node-nlp-typescript": "^1.0.3",
    "string-width": "^7.2.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3",
    "uuid": "^11.1.0",
    "wcwidth": "^1.0.1",
    "wrap-ansi": "^9.0.0"
  },
  "devDependencies": {
    "@types/uuid": "^10.0.0",
    "@vitest/coverage-v8": "^3.1.3",
    "chai": "^5.2.0",
    "drizzle-kit": "^0.31.1",
    "execa": "^9.5.3",
    "sinon": "^20.0.0",
    "ts-morph": "^25.0.1",
    "tsx": "^4.19.4",
    "uvu": "^0.5.6",
    "vitest": "^3.1.3"
  },
  "engines": {
    "node": ">=16.0.0"
  }
}
