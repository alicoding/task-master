{
  "name": "task-master",
  "version": "1.0.0",
  "type": "module",
  "bin": {
    "tm": "./cli/entry.js"
  },
  "directories": {
    "test": "test"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsx cli/entry.ts",
    "test": "uvu -r tsx",
    "db:generate": "drizzle-kit generate:sqlite",
    "db:migrate": "tsx db/migrate.ts",
    "db:init": "tsx db/init.ts",
    "docs:generate": "node scripts/generate-docs.js",
    "docs:commands": "node scripts/generate-command-docs.js",
    "docs:all": "npm run docs:generate && npm run docs:commands",
    "lint": "eslint . --ext .ts",
    "check": "tsc --noEmit",
    "fix:300-line": "node scripts/fix-long-files.js"
  },
  "keywords": [
    "task-management",
    "cli",
    "productivity",
    "sqlite",
    "drizzle",
    "nlp",
    "ai"
  ],
  "author": "",
  "license": "ISC",
  "description": "Structured CLI Task Engine with SQLite + Drizzle, NLP, and AI integration",
  "dependencies": {
    "@types/better-sqlite3": "^7.6.13",
    "@types/node": "^22.15.17",
    "better-sqlite3": "^11.10.0",
    "chalk": "^5.4.1",
    "commander": "^13.1.0",
    "drizzle-orm": "^0.43.1",
    "fuse.js": "^7.1.0",
    "node-nlp-typescript": "^1.0.3",
    "typescript": "^5.8.3"
  },
  "devDependencies": {
    "drizzle-kit": "^0.31.1",
    "tsx": "^4.19.4",
    "uvu": "^0.5.6"
  },
  "engines": {
    "node": ">=16.0.0"
  }
}